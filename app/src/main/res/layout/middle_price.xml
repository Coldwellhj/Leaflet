<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/cNowPrice"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/goods_blue"
        android:layout_marginLeft="27dp"

        android:textStyle="bold"
        android:text="118"
        android:textSize="22sp"/>
    <TextView
        android:layout_alignBottom="@+id/cNowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/goods_blue"
        android:text="¥"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_alignBottom="@+id/cNowPrice"
        android:layout_toRightOf="@+id/cNowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:textColor="@color/color_tv_cFormerPrice"
        android:text="门市价"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_toRightOf="@+id/tv1"
        android:layout_alignBottom="@+id/cNowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:textColor="@color/color_tv_cFormerPrice"
        android:text=":"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_toRightOf="@+id/tv2"
        android:layout_alignBottom="@+id/cNowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:textColor="@color/color_tv_cFormerPrice"
        android:text="¥20"
        />
    <RelativeLayout
        android:id="@+id/pay"
        android:layout_toRightOf="@+id/tv3"
        android:layout_centerVertical="true"
        android:background="@drawable/pay_button_bg"
        android:layout_marginLeft="66dp"
        android:layout_width="124dp"
        android:layout_height="42dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"

        android:layout_centerInParent="true"

        android:textColor="@color/white"
        android:text="立即购买"
        />
    </RelativeLayout>
</RelativeLayout>
