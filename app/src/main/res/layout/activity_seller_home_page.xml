<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <FrameLayout
        android:id="@+id/fl_seller_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_seller_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fafafa">

        <RadioButton
            android:id="@+id/rb_seller_mian_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/seller_news_icon"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="消 息"
            android:textColor="@drawable/text_color"
            android:textSize="11sp"/>
        <RadioButton
            android:id="@+id/rb_seller_mian_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/seller_home_icon"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:checked="true"
            android:text="主 页"
            android:textColor="@drawable/text_color"
            android:textSize="11sp"/>
        <RadioButton
            android:id="@+id/rb_seller_main_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/seller_mine_icon"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="我的"
            android:textColor="@drawable/text_color"
            android:textSize="11sp"/>
    </RadioGroup>
</LinearLayout>
