<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5">


    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/main_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:gravity="center">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="200dp">

            <android.support.v4.view.ViewPager

                android:id="@+id/banner_viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <com.shizhefei.view.indicator.FixedIndicatorView
                android:id="@+id/guide_indicator"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp" />
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="#fafafa"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/near_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView

                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/near_shop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近店铺"
                    android:layout_marginTop="5dp"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/near_coupon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView

                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/near_coupon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近优惠"
                    android:layout_marginTop="5dp"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/online_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView

                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/online_shop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线商城"
                    android:layout_marginTop="5dp"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fans_exclusive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView

                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/fans_exclusive"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝专享"
                    android:layout_marginTop="5dp"
                    android:textColor="#333333"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线促销"
                android:layout_marginTop="20dp"
                android:textColor="#333333"
                android:textSize="13sp"/>
            <leaflet.miaoa.qmsh.leaflet.ui.widget.MaxRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content">

            </leaflet.miaoa.qmsh.leaflet.ui.widget.MaxRecyclerView>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"


                android:gravity="center">
                <LinearLayout
                    android:id="@+id/ll_more"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多商品"
                        android:textSize="13sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近优惠"
                android:layout_marginTop="20dp"
                android:textColor="#333333"
                android:textSize="13sp"/>
            <leaflet.miaoa.qmsh.leaflet.ui.widget.MaxRecyclerView
                android:layout_marginTop="11dp"
                android:id="@+id/recyclerView_youhuiquan"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content">

            </leaflet.miaoa.qmsh.leaflet.ui.widget.MaxRecyclerView>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"


                android:gravity="right">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_more_youhuiquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多优惠"
                        android:textSize="13sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近店铺"
                android:layout_marginTop="20dp"
                android:textColor="#333333"
                android:textSize="13sp"/>
            <leaflet.miaoa.qmsh.leaflet.ui.widget.MaxRecyclerView
                android:layout_marginTop="11dp"
                android:id="@+id/recyclerView_shop"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content">

            </leaflet.miaoa.qmsh.leaflet.ui.widget.MaxRecyclerView>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"


                android:gravity="center">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_more_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多店铺"
                        android:textSize="13sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

        </LinearLayout>


</com.handmark.pulltorefresh.library.PullToRefreshScrollView>


</RelativeLayout>
