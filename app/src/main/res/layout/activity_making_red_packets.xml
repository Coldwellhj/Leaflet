<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:scrollbars="none"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/iv_making_red_packets_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="制作红包广告"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择目标人群"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tl_making_red_packets_tagflowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/around_background"
        app:tag_gravity="center"
        app:max_select="5">
    </com.zhy.view.flowlayout.TagFlowLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置广告投放天数"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:background="@drawable/around_background"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投放天数"
            android:textColor="#333333"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:hint="5"
            android:background="@null"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#999999"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textColor="#333333"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置覆盖人数（请填写10的整数倍哦）"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:background="@drawable/around_background"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="覆盖人数"
            android:textColor="#333333"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_personNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:hint="5000"
            android:background="@null"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#999999"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人/天"
            android:textColor="#333333"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置单个红包金额（最低金额为0.2元哦）"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:background="@drawable/around_background"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每个红包"
            android:textColor="#333333"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:hint="0.3"
            android:background="@null"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#999999"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#333333"
            android:textSize="16sp"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额"
            android:textColor="#333333"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/totalMoney"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#e75356"
            android:textSize="16sp" />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址（根据此位置推送广告）"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"/>
        <RelativeLayout
            android:id="@+id/rl_chooseAddress"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:background="@drawable/around_background"
            >

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区"
                android:textColor="#333333"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_chooseAddress"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete"/>
            <TextView
                android:layout_toLeftOf="@id/iv_chooseAddress"
                android:layout_marginRight="10dp"
                android:text="请选择"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_making_red_packets_next"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/button_conner"
            android:text="下一步"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
